<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text_background_white</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">16dp</item>
    </style>

    <style name="SearchText" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_search_black_24dp</item>
        <item name="android:drawableTint" tools:targetApi="m">@android:color/darker_gray</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TasteLabel">
        <item name="android:background">@drawable/background_color_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>